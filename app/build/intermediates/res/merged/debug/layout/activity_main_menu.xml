<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.walkwithme.m4uro.walkwithme01.MainMenu"
    android:background="@drawable/bg_content">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="99dp">

        <Button
            android:id="@+id/btnTraining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:focusableInTouchMode="false"
            android:text="Modo Entrenamiento"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnClassification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnTraining"
            android:layout_alignStart="@+id/btnTraining"
            android:layout_below="@+id/btnTraining"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Modo Clasificación"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Presione 5 veces la huella para iniciar modo clasificación silencioso."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            app:srcCompat="@drawable/logo1_soloq" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnClassification"
            android:layout_centerHorizontal="true"
            android:text="Clasificación Guiada" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
