<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.walkwithme.m4uro.walkwithme01.Authentication"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/button"
        android:layout_width="256dp"
        android:layout_height="54dp"
        android:layout_marginBottom="17dp"
        android:layout_weight="0.00"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Buscar dispositivos"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Conectar Red Apoyo"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="88dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:text="Conectar adulto mayor"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="291dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese Correo"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese ContraseÃ±a"
        android:inputType="textPassword"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/editText6"
        android:layout_alignStart="@+id/editText6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/boton_bg"
        android:elevation="11dp"
        android:text="Ingresar"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/editText7"
        android:layout_alignStart="@+id/button" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/logo1_soloq" />

</RelativeLayout>
