<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.walkwithme.m4uro.walkwithme01.TrainingMenu"
    android:background="@drawable/bg_content">

    <Button
        android:id="@+id/btnCaminar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnReposo"
        android:layout_alignStart="@+id/btnSaltar"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Caminar"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnCorrer"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCaminar"
        android:layout_alignBottom="@+id/btnCaminar"
        android:layout_alignEnd="@+id/btnSentarParar"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Correr"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Entrene AcciÃ³n"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnReposo"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAcostarParar"
        android:layout_alignEnd="@+id/btnAcostarParar"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Reposo"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnSentarParar"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCancelar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Sentarse - Pararse"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Cancelar"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnAcostarParar"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSentarParar"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Acostarse - Pararse"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnSaltar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAcostarParar"
        android:layout_alignStart="@+id/btnAcostarParar"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Saltar"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

</RelativeLayout>
